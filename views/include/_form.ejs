<!-- form handling-->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Nazwa</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Pierś z kurczaka">
        </div>
        <div class="form-group">
            <label for="quantity" class="text-light">Ilość</label>
            <input type="number" name="quantity" value="1" min="0" step="any">
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>